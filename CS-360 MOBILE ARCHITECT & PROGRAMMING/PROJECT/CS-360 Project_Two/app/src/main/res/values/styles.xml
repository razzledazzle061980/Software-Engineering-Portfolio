<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="checkboxStyles">
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <!--<item name="android:button">@drawable/round_checkbox</item>-->
    </style>

    <style name="primaryButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="CardView.Rating" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/card_rating</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:maxWidth">24dp</item>
    </style>

</resources>