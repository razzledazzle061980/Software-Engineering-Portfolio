<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="checkboxStyles">
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <!--<item name="android:button">@drawable/round_checkbox</item>-->
    </style>

    <style name="primaryButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="cancelButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="standardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="textInput" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:hint">@string/firstName</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="textEdit" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="itemTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textColorHighlight">@color/primaryDark</item>
        <item name="android:textFontWeight">@android:integer/config_longAnimTime</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toEndOf">@+id/itemImage</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>